<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapBtnFragment">

    <Button
        android:id="@+id/thirdFloorBtn"
        android:layout_width="40dp"
        android:layout_height="48dp"
        android:text="3F"
        android:textColor="@color/white"
        android:background="@drawable/darkblue_btn"
        android:textSize="17dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        />

    <Button
        android:id="@+id/fourthFloorBtn"
        android:layout_width="40dp"
        android:layout_height="48dp"
        android:text="4F"
        android:textColor="@color/white"
        android:background="@drawable/darkblue_btn"
        android:textSize="17dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/thirdFloorBtn"
        />

    <Button
        android:id="@+id/currentPosBtn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/darkblue_btn"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="14dp"
        android:layout_marginBottom="13dp"
        android:drawableTop="@drawable/currentposbtncml" />

</RelativeLayout>