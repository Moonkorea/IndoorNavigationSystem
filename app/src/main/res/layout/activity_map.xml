<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapActivity">

    <Button
        android:id="@+id/searchBtn"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:background="@drawable/darkblue_btn"
        android:text="경로 검색하러 가기"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <ImageView
        android:id="@+id/mapImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <ImageView
        android:id="@+id/currentPosIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


<!--    <fragment-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:name="com.jungsoo.indoornavigationapp.MapFragment"-->
<!--        android:id="@+id/mapFragment"-->
<!--        />-->

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.jungsoo.indoornavigationapp.MapBtnFragment"
        android:id="@+id/mapBtnFragment"
        />

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.jungsoo.indoornavigationapp.SearchFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="-365dp" />


</androidx.constraintlayout.widget.ConstraintLayout>

