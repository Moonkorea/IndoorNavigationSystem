<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IndoorNavigationApp" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
    </style>

    // 스플래시 화면 설정
    <style name="SplashActivityTheme" parent="Theme.AppCompat.NoActionBar"> <!--Theme.AppCompat.NoActionBar-->
        <item name="android:windowBackground">@drawable/splashsample</item>
    </style>

    <style name="Theme.IndoorNavigationApp.DarkActionBar">
<!--        <item name="windowActionBar">false</item>-->
<!--        <item name="windowNoTitle">false</item>-->
    </style>

    <style name="Theme.IndoorNavigationApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.IndoorNavigationApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>